<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEFEF" >
    
    <TextView
        android:id="@+id/URL_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/netConfigURLAddress"
        android:layout_marginLeft="6dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=""
        android:minEms="16"
        android:padding="2dip"
        android:layout_marginLeft="6dp"
        android:scrollHorizontally="true"
        android:layout_below="@+id/URL_address"
        android:singleLine="true"
        android:textSize="14sp" />
    
    <Button
        android:id="@+id/server_connect_test"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editor"
        android:layout_marginLeft="20dp"
        android:text="@string/netConfigURLServerTest"
        android:textSize="14sp" />

    <Button
        android:id="@+id/system_update"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/editor"
        android:text="@string/netConfigSystemUpdateConfig"
        android:textSize="14sp" />

    <Button
        android:id="@+id/download"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_connect_test"
        android:layout_marginLeft="20dp"
        android:text="@string/netConfigDataDownload"
        android:textSize="14sp" />

    <Button
        android:id="@+id/modify_password"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/server_connect_test"
        android:text="@string/netConfigChangePassword"
        android:textSize="14sp" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/btn_save"
        />



</RelativeLayout>